<h1>Lifestyle</h1>
<h2>Choose the registry type that best fits your lifestyle.</h2>
<div class="row-fluid wizard-lifestyle-choose">
  <% @types.each do |type| %>
    <div class="span3 wizard-lifestyle-container" data-id="<%= type.id %>">
      <h2 class="wizard-lifestyle-type"><%= type.name %></h2>
      <span class="fontawesome-heart wizard-lifestyle-selected"></span>
      <img src="<%= type.image_url %>">
    </div>
  <% end %>
</div>
<%= form_tag registries_url do %>
  <%= hidden_field_tag :lifestyle_type %>
  <div class="field">
    <%= submit_tag nil, value: "Create My Registry", class: "button form-button" %>
  </div>
<% end %>
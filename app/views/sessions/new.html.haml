.container
  .row-fluid
    .span12
      %h1 Sign into your Simplstry account
    .span3.offset4
      = form_tag sessions_url do
        .field
          = label_tag :email
          = email_field_tag :email, nil, required: true
        .field
          = label_tag :password
          = password_field_tag :password, nil, required: true
        .actions
          = submit_tag "Sign In", class: "button form-button"

